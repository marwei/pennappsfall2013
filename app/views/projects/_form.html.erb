<div style="width:600px; margin:auto;">

	<%= form_for @project, class: "form-horizontal" do |f| %>
		<div class="form-group">
	    <%= f.label :name, class: "col-lg-2 control-label" %>
	    <div class="col-lg-10"><%= f.text_field :name, :autofocus => true, class: "form-control" %></div>
	  </div>

	  <div class="form-group">
	    <%= f.label :description, class: "col-lg-2 control-label" %>
	    <div class="col-lg-10"><%= f.text_area :description, class: "form-control" %></div>
	  </div>

	  <div class="form-group">
	    <%= f.label :user_capacity, class: "col-lg-2 control-label" %>
	    <div class="col-lg-10"><%= f.text_field :user_capacity, class: "form-control" %></div>
	  </div>

	  <div class="form-group">
		<%= f.label :skills, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.fields_for :skills do |s| %>
        <%= s.text_field :name, class: "form-control"  %>
      <% end %>
    </div>

  </div>

	  <div class="form-group">
	    <div class="col-lg-offset-2 col-lg-10">
	      <%= f.submit "Submit", class: "btn btn-default" %>
	    </div>
	  </div>

	<% end %>

</div>